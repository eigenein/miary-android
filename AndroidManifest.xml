<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="in.eigene.miary"
          android:versionCode="1"
          android:versionName="0.1"
>
    <uses-sdk android:minSdkVersion="11" android:targetSdkVersion="19"/>

    <!-- Parse SDK. -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- Exporting. -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher"
            android:theme="@style/Miary.Theme.Application"
            android:name="in.eigene.miary.Application"
    >
        <activity
                android:name=".activities.FeedActivity"
                android:label="@string/app_name"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="in.eigene.miary.activities.NoteActivity"
                android:label="@string/activity_note"
        />
        <activity
                android:name="in.eigene.miary.activities.SettingsActivity"
                android:label="@string/activity_settings"
        />
    </application>
</manifest>
