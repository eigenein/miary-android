<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/account_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/drawer_item_margin"
        android:gravity="center_vertical"
        android:background="@drawable/drawer_item_background"
        android:clickable="true"
>
    <in.eigene.miary.widgets.RoundedImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/avatar_placeholder_gray"
    />
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/drawer_item_margin"
            android:orientation="vertical"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drawer_sign_in"
                android:textStyle="bold"
                style="@android:style/TextAppearance.Medium"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drawer_basic_account"
                style="@android:style/TextAppearance.Small"
    />
    </LinearLayout>
</LinearLayout>