<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:id="@+id/feed_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/feed_item_external_margin"
        cardview:cardBackgroundColor="@color/background_holo_light"
        cardview:cardCornerRadius="0dp"
        cardview:contentPadding="@dimen/feed_item_internal_margin"
        cardview:cardUseCompatPadding="true"
>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <TextView
                android:id="@+id/feed_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginBottom="@dimen/feed_item_internal_margin"
        />
        <TextView
                android:id="@+id/feed_item_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
        />
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/feed_item_separator_height"
                android:scaleType="centerInside"
                android:src="@drawable/feed_item_separator"
                android:layerType="software"
        />
        <TextView
                android:id="@+id/feed_item_creation_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
        />
    </LinearLayout>
</android.support.v7.widget.CardView>
