<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
>
    <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_holo_light"
    >
        <fragment android:name="in.eigene.miary.fragments.FeedFragment"
                  android:id="@+id/fragment_feed"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="@dimen/feed_horizontal_margin"
                  android:layout_marginRight="@dimen/feed_horizontal_margin"
                  tools:layout="@layout/fragment_feed"
        />
        <!-- Navigation drawer. -->
        <LinearLayout
                android:id="@+id/drawer"
                android:orientation="vertical"
                android:layout_width="@dimen/navigation_drawer_width"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@color/background_holo_light"
                android:clickable="true"
                android:layout_marginTop="?attr/actionBarSize"
        >
            <include android:id="@+id/drawer_item_feed" layout="@layout/drawer_item"/>
            <include android:id="@+id/drawer_item_starred" layout="@layout/drawer_item"/>
            <include android:id="@+id/drawer_item_drafts" layout="@layout/drawer_item"/>

            <!--
            TODO: future features.
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/drawer_item_margin"
                    android:layout_marginTop="@dimen/drawer_item_margin"
                    android:textColor="@color/dark_gray_text_color"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:text="Labels"
                    style="@android:style/TextAppearance.Small"
                    />
            <include layout="@layout/drawer_section"/>
            -->
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
    <include layout="@layout/toolbar"/>
</RelativeLayout>