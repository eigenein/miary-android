<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <include layout="@layout/toolbar"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fullscreen_dialog_padding"
    >
        <EditText
                android:id="@+id/auth_email_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/text_field_vertical_padding"
                android:paddingBottom="@dimen/text_field_vertical_padding"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:singleLine="true"
        />
        <EditText
                android:id="@+id/auth_password_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/text_field_vertical_padding"
                android:paddingBottom="@dimen/text_field_vertical_padding"
                android:inputType="textPassword"
                android:hint="@string/password_hint"
                android:singleLine="true"
        />
    </LinearLayout>
</LinearLayout>
