<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:background="@drawable/drawer_item_background"
>
    <ImageView
            android:id="@+id/drawer_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/drawer_item_margin"
            android:layout_marginRight="@dimen/drawer_item_margin"
    />
    <TextView
            android:id="@+id/drawer_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/drawer_item_margin"
            android:layout_marginRight="@dimen/drawer_item_margin"
            android:layout_weight="1"
            android:textSize="16dp"
    />
    <TextView
            android:id="@+id/drawer_item_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/drawer_item_margin"
            android:layout_marginRight="@dimen/drawer_item_margin"
            android:visibility="gone"
            android:textColor="@color/blue_grey_500"
            android:textStyle="bold"
            android:textSize="14dp"
    />
</LinearLayout>
