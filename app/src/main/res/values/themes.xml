<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Miary.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/light_text_primary</item>
        <item name="android:textColorHint">@color/light_text_hint</item>
        <item name="colorAccent">@color/blue_500</item>
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="navigationItemIconTint">@color/grey_600</item>
    </style>
    <style name="Miary.Theme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="android:textColorHint">@color/dark_text_hint</item>
        <item name="colorAccent">@color/blue_500</item>
        <item name="colorPrimary">@color/grey_900</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="navigationItemIconTint">@color/white</item>
    </style>
    <style name="Miary.Theme.Fab">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>
</resources>
